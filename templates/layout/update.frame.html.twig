{% set resource = form.vars.data %}

<turbo-frame id="{{ resourceType }}-detail">
    <div class="h-full flex flex-col">
        {{ form_start(form, { attr: { class: 'flex-grow flex flex-col overflow-hidden'}}) }}
        <div class="flex text-xl border-b border-base-200 h-16 items-center gap-2 p-4 flex-shrink-0">
            {{ include(resourceType ~ '/_header.html.twig') }}
            <button class="ml-auto btn text-success btn-ghost btn-circle ml-auto mt-1 flex flex-nowrap" formnovalidate>
                <i class="fa fa-check fa-lg"></i>
            </button>
            <a href="{{ path('app_' ~ resourceType ~ '_show', { id: resource.id }) }}"
               class="btn btn-ghost text-base-300 btn-circle mt-1 flex flex-nowrap"
            >
                <i class="fa fa-times fa-lg"></i>
            </a>
        </div>
        <div class="overflow-y-auto p-4">
            {{ include(resourceType ~ '/_form_update.html.twig') }}
            {{ form_row(form._token) }}
        </div>
        {{ form_end(form, { render_rest: false}) }}
    </div>
</turbo-frame>
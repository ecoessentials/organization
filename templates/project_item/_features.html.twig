{% set ignoreGroups = item.product.featureGroups|length <= 1 %}
<div class="px-8 py-4 rounded-lg bg-base-200 mb-6 flex flex-col gap-4">
    {% for group in item.product.featureGroups %}
        <div>
            {% if not ignoreGroups %}
                <div class="mb-3 bg-base-300 -mx-2 px-2 py-1 opacity-50">{{ group.name }}</div>
            {% endif %}
            <div class="flex flex-col gap-4 overflow-y-auto">
            {% for feature in group.features %}
                {% for featureValue in item.featureValues %}
                    {% if featureValue.productFeature == feature %}
                        {{ include('partials/_detail_field.html.twig', {
                            label: feature.name,
                            value: featureValue.value
                        }) }}
                    {% endif %}
                {% endfor %}
            {% endfor %}
            </div>
        </div>
    {% endfor %}
</div>

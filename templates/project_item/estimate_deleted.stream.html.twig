<turbo-stream action="remove" target="project-item-estimate-{{ estimateId }}">
</turbo-stream>

<turbo-stream action="update" target="modal-confirmation">
    <template></template>
</turbo-stream>

<turbo-stream action="replace" target="project-item-add-estimate-{{ item.id }}">
    <template>
        <turbo-frame
                id="project-item-add-estimate-{{ item.id }}"
                src="{{ path('app_project_item_create_estimate', { project: project.id, item: item.id }) }}"
        >
            <button class="btn btn-sm btn-ghost loading"></button>
        </turbo-frame>
    </template>
</turbo-stream>